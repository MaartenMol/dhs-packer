{
  "variables": {

    "vm_name": "Windows10-Template",
    "vm_folder": "AutomatedTemplates",
    "vm_switch": "FlightCase Network",
    "vm_datastore": "VNX_LUN100_R5 (DHS Only)",

    "iso_path": "[VNX-LUN01-PROD] ISO/17763.107.101029-1455.rs5_release_svc_refresh_CLIENT_LTSC_EVAL_x64FRE_en-us.iso",
    "iso_vmtools": "[VNX-LUN01-PROD] ISO/VMTools/VMware-tools-windows-10.3.10-12406962.iso",

    "vm_cpu_sockets": "1",
    "vm_cpu_cores": "2",
    "vm_disk_size": "51200",
    "vm_memory": "4096",

    "winrm_username" : "Administrator",
    "winrm_password" : "P@ssword"
  
  },
  "builders": [
    {
      "type": "vsphere-iso",

      "vcenter_server": "{{user  `vcenter_host`  }}",
      "insecure_connection": "true",
      "username": "{{user  `vcenter_user`  }}",
      "password": "{{user  `vcenter_pass`  }}",
      "cluster": "{{user  `vcenter_cluster`  }}",

      "vm_name":  "{{user  `vm_name`  }}",
      "convert_to_template": "true",
      "folder": "{{user  `vm_folder`  }}",
      "CPUs": "{{user  `vm_cpu_sockets`  }}",
      "cpu_cores": "{{user  `vm_cpu_cores`  }}",
      "RAM": "{{user  `vm_memory`  }}",
      "network": "{{user  `vm_switch`  }}",
      "network_card": "vmxnet3",
      "guest_os_type": "windows9_64Guest",
      "datastore": "{{user  `vm_datastore`  }}",
      "disk_size": "{{user  `vm_disk_size`  }}",
      "disk_controller_type":  "lsilogic-sas",
      "disk_thin_provisioned": true,
      "iso_paths": [ "{{user  `iso_path`  }}", "{{user  `iso_vmtools`  }}"],

      "communicator":"winrm",
      "winrm_username": "{{user `winrm_username`}}",
      "winrm_password": "{{user `winrm_password`}}",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_timeout": "4h",

      "floppy_files": ["{{template_dir}}/Windows_10/"],

      "shutdown_command": "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "30m"
    }
  ],

  "provisioners": [
    {
      "type": "powershell",
      "scripts": ["{{template_dir}}/Windows_10/setup.ps1"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "60m"
    },
    {
      "type": "powershell",
      "scripts": ["{{template_dir}}/Windows_10/win-update.ps1"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "60m"
    },
    {
      "type": "powershell",
      "scripts": ["{{template_dir}}/Windows_10/win-update.ps1"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "60m"
    },
    {
      "type": "powershell",
      "scripts": ["{{template_dir}}/Windows_10/cleanup.ps1"],
      "pause_before": "1m"
    }
  ]
}